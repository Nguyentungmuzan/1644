<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="/public/icon/favicon.ico">
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="css/cart.css" />
  <link rel="stylesheet" href="css/footer.css">
  <link rel="stylesheet" href="css/header.css">
  <title>Cart</title>
</head>

{{> header }}

<body style = "background-color: #fff;">
  <div class="bodyContainer">
      <h1 class="container col-md-12 text-center mt-6 mb-6">Cart</h1>
      <div class="container col-md-12 text-center mt-6 mb-6">
        <table class="table table-bordered">
          <table class="table align-middle">
            <thead class="table-secondary">
              <tr>
                <th></th>
                <th>Product name</th>
                <th>Quantity</th>
                <th>Product Price</th>
                <th>Total Price</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
              <tr>
                <td>
                  <input type="checkbox" value = {{status }}/>
                </td>
                <td>{{name}}</td>
                <td>{{quantity}}</td>
                <td>{{price}}$</td>
                {{#if isRed}}
                <td style="color: #ff0000">
                  {{else}}
                <td>
                  {{/if}}{{total_price}}$</td>
                <td>
                  <button class="btnEdit">
                    <a href="/cart/edit/{{_id }}">
                      <i class="fa-solid fa-pen" style="margin-right: 20px"></i>
                    </a>
                  </button>
                  <button class="btnEdit">
                    <a href="/cart/delete/{{_id}}">
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </button>
                </td>
              </tr>
              {{/each}}
            </tbody>
            <tfooter>
              <tr>
                <th>Total</th>
                <td colspan="3"></td>
                <td>{{total }}$</td>
                <td></td>
              </tr>
            </tfooter>
          </table>
        </table>
      </div>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Pay
      </button>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        
          <div class="container col-md-12 text-center mt-6 mb-6">
        <table class="table table-bordered">
          <table class="table align-middle">
            <thead class="table-secondary">
              <tr>
                <th>Product name</th>
                <th></th>
                <th></th>
                <th>Total Price</th>
              </tr>
            </thead>
            <tbody>
              {{#each data2}}
              <tr>
                <td>{{this.name}}</td>
                <th></th>
                <th></th>
                {{!-- {{#if isRed}} --}}
                {{!-- <td style="color: #ff0000"> --}}
                  {{!-- {{else}} --}}
                <td>
                 ${{total }}</td>
              </tr>
              {{/each}}
            </tbody>
            <tfooter>
              <tr>
                <th>Total</th>
                <th></th>
                <th></th>
                <td>${{total }}</td>
              </tr>
            </tfooter>
          </table>
        </table>
      </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

      
  </div>
</body>

{{> footer }}

</html>