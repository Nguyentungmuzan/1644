{{#> baseAdmin }}
<form method="POST" id="add" enctype="multipart/form-data" class="test">
    <div class="new">
        <div class="form-group">
            <label for="name" class="text-dark">Email</label>
            <input type="text" name="name" value="{{data.email}}">
        </div>
        <div class="form-group">
            <label for="role">Role:</label>
            <select name="role" id="role">
            <option value="admin">Admin</option>
            <option value="user" type="">User</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Update</button>
        </div>
    </div>
</form>
{{/baseAdmin}}